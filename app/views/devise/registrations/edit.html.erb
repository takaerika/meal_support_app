<% hide_tabbar = true %>

<div class="page-container card">
  <h1 class="h1">登録情報の編集</h1>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p class="muted">確認待ちのメールアドレス：<%= resource.unconfirmed_email %></p>
    <% end %>

    <div class="form-group">
      <%= f.label :password, "新しいパスワード" %>
      <small class="muted">※ 変更しない場合は空欄のまま</small>
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
      <% if @minimum_password_length %>
        <small class="muted">（<%= @minimum_password_length %>文字以上）</small>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "新しいパスワード（確認）" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :current_password, "現在のパスワード" %>
      <small class="muted">※ 変更を確定するために入力してください</small>
      <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :last_name, "姓" %>
      <%= f.text_field :last_name, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :first_name, "名" %>
      <%= f.text_field :first_name, required: true, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :last_name_kana, "姓（カナ）" %>
      <%= f.text_field :last_name_kana, class: "form-control", placeholder: "ヤマダ" %>
    </div>

    <div class="form-group">
      <%= f.label :first_name_kana, "名（カナ）" %>
      <%= f.text_field :first_name_kana, class: "form-control", placeholder: "タロウ" %>
    </div>

    <div class="form-group">
      <%= f.label :role, "区分" %>
      <%= f.select :role,
                   User.roles.keys.map { |r| [I18n.t("activerecord.enums.user.role.#{r}"), r] },
                   { include_blank: "選択してください" },
                   required: true, class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "更新する", class: "btn" %>
    </div>
  <% end %>

  <hr>

  <div class="actions" style="margin-top:12px;">
    <%= link_to "戻る", (request.referer || root_path) %>
  </div>
</div>