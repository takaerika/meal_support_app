<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "MealSupportApp" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
   <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
   <%= turbo_include_tags %>
  </head>

   <%
    show_tabbar = user_signed_in? && !(defined?(hide_tabbar) && hide_tabbar)
  %>
  <body class="<%= 'has-tabbar' if show_tabbar %>">
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>

    <div class="page-container">
      <%= yield %>
    </div>

    <% if show_tabbar %>
      <%= render "shared/tabbar" %>
    <% end %>
  </body>
</html>
