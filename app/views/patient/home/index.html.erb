  <div class="page-container">
  <header class="header">
    <h1>食事のきろく</h1>
    <div class="user-info">
      こんにちは、<%= current_user.full_name %> さん
    </div>
  </header>

  <%= render "shared/calendar",
  current_month: @month, prev_month: @prev_month, next_month: @next_month,
  first_wday: @first_wday, last_day: @last_day,
  month_path: ->(opts = {}) { root_path(opts) },
  day_path:   ->(opts = {}) { meal_records_path(opts) } %>

  <!-- 新着コメント（カレンダーの“外”に置く） -->
  <section class="comment-section">
    <p><strong>サポーターからの新着コメント🔔</strong></p>
    <% if @latest_comment.present? %>
      <p>
        <%= @latest_comment.user.last_name %>さん：
        「<%= @latest_comment.body %>」
        <small><%= l(@latest_comment.created_at, format: :short) %></small>
      </p>
    <% else %>
      <p>まだコメントはありません</p>
    <% end %>
  </section>

  <!-- フローティングボタン -->
  <%= link_to "＋ 今日の食事",
            new_meal_record_path(date: Date.current),
            class: "floating-button" %>
</div>


